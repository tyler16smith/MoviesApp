@{
    ViewBag.Title = "Nice Movie!";
    ViewBag.Header = "Nice Movie! I like that one!";
}

@model MoviesApp.Models.NewMovies

<div>
    @if (Model.Category == "" || Model.Director == "" || Model.Edited == "" || Model.Rating == "" || Model.Year < 0)
    {
        @: Sorry, go back and fill the boxes!
    }
    else
    {
        @: Click <a href="MovieList">here</a> for the full movie list.
    }
    <div asp-validation-summary="All"></div>
</div>